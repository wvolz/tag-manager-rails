<div class="mx-auto">

    <% if flash[:notice] %>
    <div role="alert" class="alert">
        <p id="notice"><%= notice %></p>
    </div>
    <% end %>

    <p>
    <strong class="label">API Key:</strong>
    <%= @api_key.id %>
    </p>

    <p>
    <strong class="label">Bearer ID:</strong>
    <%= @api_key.bearer_id %>
    </p>

    <p>
    <strong class="label">Bearer Type:</strong>
    <%= @api_key.bearer_type %>
    </p>

    <p>
    <strong class="label">Comment:</strong>
    <%= @api_key.comment %>
    </p>

    <%= link_to 'Edit', edit_api_key_path(@api_key), :class=>'link' %> |
    <%= link_to 'Back', api_keys_path, :class=>'link' %>

</div>
