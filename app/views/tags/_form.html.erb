<%= form_with(model: tag, local: true) do |form| %>
  <% if tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
      <% tag.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :tag_type, class:"label" %>
    <%= form.collection_select :tag_type_id, TagType.order(:name), :id, :name, {include_blank: '-select-'}, {class: "select"} %>
  </div>

  <div class="field">
    <%= form.label :epc, class:"label" %>
    <%= form.text_field :epc, {id: :tag_epc, class:"input"} %>
  </div>

  <div class="field">
    <%= form.label :tid, class:"label" %>
    <%= form.text_field :tid, {id: :tag_tid, class:"input"} %>
  </div>

  <div class="field">
    <%= form.label :user_memory, class:"label" %>
    <%= form.text_field :user_memory, {id: :tag_user_memory, class:"input"} %>
  </div>

  <div class="field">
    <%= form.label :description, class:"label" %>
    <%= form.text_field :description, {id: :tag_description, class:"input"} %>
  </div>

  <div class="field">
    <%= form.label :pc, class:"label" %>
    <%= form.text_field :pc, {id: :tag_pc, class:"input"} %>
  </div>

  <div class="field">
    <fieldset class="fieldset bg-base-100 border-base-300 rounded-box w-64 border p-4">
      <legend class="fieldset-legend">Authorizations</legend>
        <%= form.collection_check_boxes :authorization_ids, Authorization.order(:name), :id, :name do |b| %>
            <%= b.check_box(class:"checkbox") %>
            <%= b.label(class:"label") %>
        <% end %>
    </fieldset>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
