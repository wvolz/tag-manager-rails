<div class="mx-auto">
    <% if flash[:notice] %>
    <div role="alert" class="alert">
        <p id="notice"><%= notice %></p>
    </div>
    <% end %>

    <h1 class="font-bold">Users</h1>

    <table class="table">
    <thead>
        <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Create Date</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
        <tr class="hover:bg-base-300">
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at %></td>
            <td><%= link_to 'Show', user, :class=>'link' %></td>
            <td><%= link_to 'Edit', edit_user_path(user), :class=>'link' %></td>
            <td><%= link_to 'Destroy', user_path(user), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, :class=>'link' %></td>
        </tr>
        <% end %>
    </tbody>
    </table>

    <br>

    <%= link_to 'New User', new_user_path, :class=>'link' %>
</div>
